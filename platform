using System.Collections;
using System.Collections.Generic;
using UnityEngine;

//collider의 istrigger는 on으로 설정해야 함
//player의 좌표는 중앙 아래로 설정
public class Platform : MonoBehaviour
{
    float thickness;

    void Start()
    {
        thickness = gameObject.Transform.localScale.y;
    }

    void OnTriggerEnter(Collider other)
    {
        Vecter3 otp = other.transform.position;
        if (otp.y > transform.position.y)
        {
            other.transform.position = new Vector3(otp.x, transform.position.y + (thickness / 2), 0);
            other.GetComponent<Rigidbody>().velocity = Vector3.zero;
        }
    }
}
