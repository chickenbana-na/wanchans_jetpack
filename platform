using UnityEngine;

public class platform : MonoBehaviour
{
    float thickness;

    void Start()
    {
        thickness = transform.localScale.y;
    }

    void OnTriggerEnter(Collider other)
    {
        Vector3 otp = other.transform.position;
        if (otp.y > transform.position.y)
        {
            other.transform.position = new Vector3(otp.x, transform.position.y + (thickness / 2), 0);
            other.GetComponent<Rigidbody>().linearVelocity = Vector3.zero;
        }
    }
}
